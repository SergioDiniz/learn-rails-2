	%h2 Atividade:

	= render 'flash'

	%ul.list-unstyled.list-activity
		%li
			%div.description= @activity.description
			%div
				- if @activity.user 
					= @activity.user.full_name
				-else
					Sem Autor
				

			%div.created_at
				postado em: 
				= @activity.created_at.strftime("%d %b %Y")
