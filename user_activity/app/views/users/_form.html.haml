= form_for @user do |f|
	.form-group
		= f.text_field :full_name, class: 'form-control input-lg', placeholder: 'Nome Usu√°rio', required: true
	.form-group
		= f.email_field :email, class: 'form-control input-lg', placeholder: 'Email', required: true
	.form-group
		= f.password_field :password, class: 'form-control input-lg', placeholder: 'Senha', required: true
	.form-group
		= f.password_field :password_confirmation, class: 'form-control input-lg', placeholder: 'Confirmar a Senha', required: true

	= f.submit 'Salvar', class: 'btn btn-primary btn-block btn-lg'