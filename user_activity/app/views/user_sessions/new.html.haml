%h1.text-center Login
%br
.col-md-4.col-md-offset-4

	

	= form_for @user_session do |f|
		.form-group
			= f.email_field :email, class: 'form-control input-lg', placeholder: 'seu@email.com', required: true
		.form-group
			= f.password_field :password, class: 'form-control input-lg', placeholder: 'senha', required: true

		= f.submit 'Logar', class: 'btn btn-lg btn-block btn-primary'

	%br
	- if @user_session.errors.has_key? :base
		%div.alert.alert-danger.alert-dismissible
			%button.close{'data-dismiss': "alert", 'aria-label': "Close"} 
				%span &times;
			= @user_session.errors[:base].join(', ')